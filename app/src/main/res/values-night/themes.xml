<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileProgrammingPracticals" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color (used for toolbar, status bar, etc.). -->
        <item name="colorPrimary">@color/primaryText</item> <!-- A lighter color for contrast on dark backgrounds. -->
        <item name="colorPrimaryVariant">@color/secondaryText</item> <!-- Lighter variant for the status bar. -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text on primary color. -->

        <!-- Secondary brand color (used for FABs, etc.). -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Text on secondary color. -->

        <!-- Background color (dark background for night mode) -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>
</resources>
