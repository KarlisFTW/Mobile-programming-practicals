<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainLabelTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="regularTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="footerTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="buttonViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:radius">90dp</item>

    </style>
    <style name="ThemeEditText">
        <item name="colorControlNormal">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calculatorDigitButtonViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black2</item>
        <item name="android:radius">90dp</item>
    </style>
    <style name="calculatorUniqueButtonViewStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/black2</item>
        <item name="android:radius">90dp</item>
    </style>
    <style name="calculatorOperatorButtonViewStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/black2</item>
        <item name="android:radius">90dp</item>
    </style>
    <style name="checkBoxStyle">
    <item name="android:buttonTint">@color/green</item>
    </style>
</resources>